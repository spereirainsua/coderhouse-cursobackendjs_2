<div>
    <h2>{{title}}</h2>
    <div id="cartContainer" class="cart-container">
        {{#if status}}
        {{#each cart}}
        {{#with this}}
        <div class="card-row">
            <div class="counter-container">
                <span>{{quantity}} x</span>
            </div>
            <div class="img-container-row">
                <img src={{productId.photo}} alt="Imagen del producto" class="card-img-row" />
            </div>
            <div class="title-container-row">
                <span>{{productId.title}}</span>
            </div>
            <div class="subtotal-row-container">
                <span>{{productId.price}}</span>
            </div>
            <div class="btn-delete-row">
                <button id="{{productId._id}}" name="deleteFromCart" class="btn btn-delete">
                    <span>❌</span>
                </button>
            </div>
        </div>
        {{/with}}
        {{/each }}
        {{else}}
            <span>El carrito está vacío.</span>
        {{/if}}
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/viewCart.js"></script>